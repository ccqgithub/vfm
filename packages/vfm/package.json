  "repository": {
    "type": "git",
    "url": "git+https://github.com/ccqgithub/vfm.git"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "bugs": {
    "url": "https://github.com/ccqgithub/vfm/issues"
  },
  "homepage": "https://github.com/ccqgithub/vfm#readme",
  "directories": {
    "doc": "docs"
  },
  "author": "",
  "license": "ISC",
  "exports": {
    ".": {
      "import": "./dist/vfm.es.js",
      "require": "./dist/vfm.umd.js"
    }
  },
  "tsd": {
		"directory": "test/tsc"
	}
